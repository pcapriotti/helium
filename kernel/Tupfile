include_rules

CFLAGS += $(CFLAGS_HELIUM)
CFLAGS += -I$(TUP_CWD)

CC=$HOME/.local/opt/cross/bin/$(TARGET)-gcc
LD=$HOME/.local/opt/cross/bin/$(TARGET)-ld

LIBS=../libc/libc.a ../ext2/ext2.a ../core/core.a
LSCRIPT=kernel.ld
LDFLAGS += -e kmain

: foreach *.S |> !as |>
: foreach *.c paging/*.c |> !cc |>
: *.o $(LIBS) |> !ld |> kernel.elf
